* {
  box-sizing: border-box;
}
*::before,
*::after {
  box-sizing: border-box;
}
.skin {
  position: relative;
}
.nose {
  border: 10px solid black;
  border-color: black transparent transparent;
  border-bottom: none;
  width: 0px;
  height: 0px;
  position: relative;
  left: 50%;
  top: 140px;
  margin-left: -10px;
}
.yuan {
  position: absolute;
  width: 20px;
  height: 6px;
  border: 1px solid black;
  top: -16px;
  left: -10px;
  border-radius: 10px 10px 0 0;
  background: black;
}
.eye {
  border: 2px solid black;
  width: 64px;
  height: 64px;
  position: absolute;
  left: 50%;
  top: 100px;
  margin: -32px;
  background: rgb(25, 25, 25);
  border-radius: 50%;
}
.eye::before {
  content: "";
  display: block;
  border: 3px solid black;
  width: 25px;
  height: 25px;
  border-radius: 50%;
  background: #fff;
  position: relative;
  left: 7px;
  top: 1px;
}
.eye.left {
  transform: translate(-100px);
}
.eye.right {
  transform: translate(100px);
}
